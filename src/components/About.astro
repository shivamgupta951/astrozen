---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, image, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="flex flex-col items-center gap-12 md:flex-row md:gap-8">
    <p class="w-auto text-base text-neutral md:pr-5">{description}</p>
    <div
      class="relative h-80 w-64 flex-shrink-0 bg-base-100 p-4 rounded-3xl shadow-xl shadow-primary/40 border-4 border-primary transform rotate-[3deg] hover:rotate-0 transition-transform duration-500"
    >
      <Image
        class="object-cover rounded-2xl shadow-lg shadow-primary/30 border-2 border-primary/50"
        src={image}
        width="260"
        height="260"
        alt={name}
        loading="lazy"
      />
      <div
        class="absolute inset-0 rounded-3xl bg-primary/10 blur-2xl opacity-40 -z-10"
      ></div>
    </div>
  </div>
</Section>
